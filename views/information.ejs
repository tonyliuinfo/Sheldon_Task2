<html>

<head>
    <%- include('partials/navbar1.ejs') %>
        <%- include('partials/header1.ejs') %>
</head>

<style>
    .events h1 {
        text-align: center;
        color: #000000;
        margin-bottom: 30px;
        font-style: initial;
        font-size: 40px;
    }

    .scroll-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        /* centers the content horizontally */
        overflow: hidden;
        margin: 0 auto;
        /* centers the container itself */
        width: 40%;
        /* adjust this number until it fits exactly one image */
        height: auto;
    }

    .scroll-content {
        display: flex;
        gap: 4rem;
        overflow-x: auto;
        scroll-behavior: smooth;
        padding: 1rem 2rem;
        height: 55vh;
        /* slightly larger than image */
    }

    .scroll-content::-webkit-scrollbar {
        height: 10px;
    }

    .scroll-content::-webkit-scrollbar-thumb {
        background: #000000;
        border-radius: 10px;
    }

    .event-card {
        flex: 0 0 100%;
        /* ensures only one card fits in the container */
        scroll-snap-align: center;
        text-align: center;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .event-card:hover {
        transform: scale(1.05);
    }

    .event-card img {
        width: 100%;
        height: 400px;
        /* half the screen height */
        object-fit: cover;
        /* keeps aspect ratio, fills space */
        border-radius: 12px;
        filter: grayscale(100%);
        transition: filter 0.3s ease, transform 0.3s ease;
    }

    .event-card:hover img {
        filter: grayscale(0%);
        transform: scale(1.03);
    }

    .event-name {
        margin-top: 0.5rem;
        font-weight: bold;
        color: #000000;
        font-size: 24px;
    }

    /* Scroll arrows */
    .scroll-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        font-size: 1.5rem;
        cursor: pointer;
        transition: background 0.3s;
        z-index: 2;
        outline: none;
        -webkit-tap-highlight-color: transparent;
        /* removes green tap highlight */
    }

    .scroll-btn:hover {
        background-color: rgba(255, 255, 255, 1);
    }

    .scroll-btn:active,
    .scroll-btn:focus {
        background-color: #555555;
        /* üëà dark grey */
        color: white;
        /* optional: make the arrow white when pressed */
        outline: none;
    }

    .scroll-prev {
        left: -15px;
    }

    .scroll-next {
        right: -15px;
    }

    .scroll-content::-webkit-scrollbar {
        display: none;
        /* hides scrollbar in Chrome/Safari/Edge */
    }

    .scroll-content {
        scrollbar-width: none;
        /* hides scrollbar in Firefox */
    }

    .scroll-dots {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 15px;
        gap: 8px;
    }

    .scroll-dots .dot {
        width: 12px;
        height: 12px;
        background-color: #ccc;
        border-radius: 50%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .scroll-dots .dot.active {
        background-color: #555;
        /* dark grey for active dot */
    }



    .local-shops {
        margin-top: 5rem;
        text-align: center;
    }

    .local-shops h1 {
        text-align: center;
        color: #000000;
        margin-bottom: 30px;
        font-style: initial;
        font-size: 40px;
    }

    .shops-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        /* 2 per row */
        gap: 2rem;
        padding: 0 2rem;
    }

    /* Each shop card */
    .shop-card {
        display: flex;
        /* puts left + right side by side */
        align-items: flex-start;
        background: #f9f9f9;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-sizing: border-box;
        /* ensures padding stays inside */
        width: 100%;
    }

    .shop-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    /* Left section */
    .shop-left {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 40%;
        /* takes 40% of card width */
        min-width: 200px;
        /* prevents image from collapsing */
    }

    .shop-left img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }

    .shop-left h2 {
        font-size: 1.2rem;
        font-weight: bold;
        color: #222;
        margin: 0.2rem 0 0;
    }

    /* Right section */
    .shop-right {
        flex: 1;
        /* fill remaining space */
        text-align: left;
        padding-left: 1.5rem;
    }

    .shop-right p {
        margin: 1.5rem 0;
        color: #333;
        line-height: 1.4;
    }

    .shop-right a {
        color: #000000;
        text-decoration: none;
    }

    .shop-right a:hover {
        text-decoration: underline;
    }

    /* Responsive fix for small screens */
    @media (max-width: 900px) {
        .shops-container {
            grid-template-columns: 1fr;
            /* only 1 card per row */
        }

        .shop-card {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .shop-right {
            padding-left: 0;
            margin-top: 1rem;
            text-align: center;
        }

        .shop-left {
            width: 100%;
        }
    }

</style>

<body>
    <section class="events">
        <h1>UPCOMING EVENTS</h1>

        <div class="scroll-container">
            <button class="scroll-btn scroll-prev">‚ùÆ</button>

            <div class="scroll-content">
                <% events.forEach(events=> { %>
                    <div class="event-card" data-link="<%= events.link %>">
                        <img src="/public/<%= events.image %>" alt="<%= events.name %>">
                        <div class="event-name">
                            <%= events.name %>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <button class="scroll-btn scroll-next">‚ùØ</button>
        </div>

        <div class="scroll-dots"></div>
    </section>

    <section class="local-shops">
        <h1>LOCAL SHOPS</h1>
        <div class="shops-container">
            <% shops.forEach(shops=> { %>
                <div class="shop-card">
                    <div class="shop-left">
                        <img src="/public/<%= shops.image %>" alt="<%= shops.name %>">
                        <h2>
                            <%= shops.name %>
                        </h2>
                    </div>
                    <div class="shop-right">
                        <p><strong>Location:</strong>
                            <%= shops.location %>
                        </p>
                        <p><strong>Opening Hours:</strong>
                            <%= shops.opening_hours %>
                        </p>
                        <p><strong>Website:</strong>
                            <a href="<%= shops.website %>" target="_blank">
                                <%= shops.website %>
                            </a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </section>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Make event images clickable
            document.querySelectorAll('.event-card').forEach(card => {
                card.addEventListener('click', () => {
                    const link = card.getAttribute('data-link');
                    if (link) window.open(link, '_blank'); // opens event website in new tab
                });
            });

            // Scroll controls
            const scrollContainer = document.querySelector('.scroll-content');
            const prevBtn = document.querySelector('.scroll-prev');
            const nextBtn = document.querySelector('.scroll-next');
            const cards = document.querySelectorAll('.event-card');
            const dotsContainer = document.querySelector('.scroll-dots');

            cards.forEach((_, i) => {
                const dot = document.createElement('div');
                dot.classList.add('dot');
                if (i === 0) dot.classList.add('active');
                dot.addEventListener('click', () => {
                    scrollContainer.scrollTo({
                        left: i * scrollContainer.clientWidth,
                        behavior: 'smooth'
                    });
                });
                dotsContainer.appendChild(dot);
            });

            const dots = document.querySelectorAll('.dot');


            prevBtn.addEventListener('click', () => {
                scrollContainer.scrollBy({
                    left: -scrollContainer.clientWidth,
                    behavior: 'smooth'
                });
            });

            nextBtn.addEventListener('click', () => {
                scrollContainer.scrollBy({
                    left: scrollContainer.clientWidth,
                    behavior: 'smooth'
                });
            });
            scrollContainer.addEventListener('scroll', () => {
                const index = Math.round(scrollContainer.scrollLeft / scrollContainer.clientWidth);
                dots.forEach((dot, i) => {
                    dot.classList.toggle('active', i === index);
                });
            })
        });
    </script>

</body>

</html>